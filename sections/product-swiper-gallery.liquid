<!-- sections/product-swiper-gallery.liquid -->
{% schema %}
{
  "name": "Product Swiper Gallery",
  "settings": [
    {
      "type": "range",
      "id": "slides_per_view_desktop",
      "label": "Кількість слайдів на десктопі",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_per_view_tablet",
      "label": "Кількість слайдів на планшеті",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "slides_per_view_mobile",
      "label": "Кількість слайдів на мобілці",
      "min": 1,
      "max": 2,
      "step": 1,
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "Показувати стрілки навігації",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Показувати пагінацію",
      "default": true
    },
    {
      "type": "range",
      "id": "space_between",
      "label": "Відступ між слайдами (px)",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 10
    }
  ]
}
{% endschema %}

<div class="swiper product-swiper">
    <div class="swiper-wrapper">
        {% for image in product.images %}
            <div
                    class="swiper-slide"
                    data-color="{{ image.alt | downcase | split: ' ' | first }}">
                <img
                        src="{{ image | image_url: width: 600 }}"
                        alt="{{ image.alt }}"
                        loading="lazy">
            </div>
        {% endfor %}
    </div>

    {% if section.settings.show_arrows %}
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    {% endif %}

    {% if section.settings.show_pagination %}
        <div class="swiper-pagination"></div>
    {% endif %}
</div>
